Quickstash.com/
├── frontend/
│   ├── package.json
│   ├── public/
│   └── src/
├── backend/
│   ├── server.js (or app.js)
│   └── any APIs or config
└── netlify.toml
[build]
base = "frontend"
publish = "build"
command = "npm install && npm run build"

[build.environment]
NODE_VERSION = "18"

[[redirects]]
from = "/*"
to = "/index.html"
status = 200
