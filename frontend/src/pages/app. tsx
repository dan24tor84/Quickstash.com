import React from 'react';
import { AppLauncher } from '@capacitor/app-launcher';

const AppLauncherButton: React.FC = () => {
  const openInstagram = async () => {
    try {
      const canOpen = await AppLauncher.canOpenUrl({ url: 'com.instagram.android' });

      if (canOpen.value) {
        await AppLauncher.openUrl({ url: 'com.instagram.android' });
      } else {
        alert('Instagram is not installed.');
      }
    } catch (error) {
      console.error('Error launching app:', error);
      alert('Something went wrong trying to open the app.');
    }
  };

  return (
    <button
      onClick={openInstagram}
      style={{
        padding: '10px 20px',
        borderRadius: '8px',
        backgroundColor: '#405DE6',
        color: '#fff',
        border: 'none',
        fontSize: '16px',
        cursor: 'pointer',
      }}
    >
      Open Instagram
    </button>
  );
};

export default AppLauncherButton;
