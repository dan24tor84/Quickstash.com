{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "startCommand": "node backend/server.js"
  },
  "deploy": {
    "restartPolicy": "ON_FAILURE",
    "restartLimit": 5,
    "healthcheckPath": "/",
    "teardown": true
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "8080"
  }
}
